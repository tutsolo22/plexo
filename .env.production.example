# Variables de Entorno para Producción
# Sistema de Gestión de Eventos V3

# ================================
# BASE DE DATOS
# ================================
DATABASE_URL=postgresql://hexaplexo:DkG7vPEumStlUZNo5o2Nupi@/gestion_eventos_prod?host=/cloudsql/plexo-475822:us-central1:mats-hexaplexo
# Variables individuales para Docker Compose
POSTGRES_DB=gestion_eventos
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password

# ================================
# AUTENTICACIÓN
# ================================
NEXTAUTH_SECRET=your-super-secure-random-secret-key-here-minimum-32-chars
NEXTAUTH_URL=https://your-domain.com

# ================================
# EMAIL SMTP
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ================================
# REDIS CACHE (OPCIONAL)
# ================================
REDIS_URL=redis://redis:6379

# ================================
# MERCADOPAGO (OPCIONAL)
# ================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token

# ================================
# CONFIGURACIÓN DE APLICACIÓN
# ================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ================================
# CONFIGURACIÓN SSL (OPCIONAL)
# ================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ================================
# LOGGING Y MONITORING
# ================================
LOG_LEVEL=info
ENABLE_PROMETHEUS_METRICS=false

# ================================
# RATE LIMITING
# ================================
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================
# CDN CONFIGURATION (OPCIONAL)
# ================================
CDN_URL=https://cdn.your-domain.com
CDN_ENABLED=false

# ================================
# ANALYTICS (OPCIONAL)
# ================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# ================================
# NOTIFICATIONS (OPCIONAL)
# ================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ================================
# SECURITY
# ================================
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
SESSION_MAX_AGE=86400
JWT_SECRET=your-jwt-secret-for-api-tokens

# ================================
# PERFORMANCE
# ================================
ENABLE_REDIS_CACHE=true
CACHE_TTL=3600
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_IDLE_TIME=30000

# ================================
# DEVELOPMENT (NO USAR EN PRODUCCIÓN)
# ================================
# DEBUG=false
# DEV_MODE=false