model WidgetApiKey {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // API Key para autenticación
  apiKey      String   @unique
  name        String   // Nombre descriptivo (ej: "Sitio Web Principal")
  description String?

  // Configuración de seguridad
  allowedOrigins String[] // Dominios permitidos para CORS
  rateLimit    Int      @default(100) // Mensajes por minuto
  isActive     Boolean  @default(true)

  // Estadísticas
  totalRequests Int      @default(0)
  lastUsedAt   DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relaciones
  conversations WidgetConversation[]

  @@index([tenantId])
  @@index([apiKey])
  @@index([isActive])
  @@map("widget_api_keys")
}

model WidgetConfig {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Configuración visual
  logoUrl     String?
  primaryColor String  @default("#007bff")
  secondaryColor String @default("#6c757d")
  position    String   @default("right") // 'left' | 'right'

  // Configuración de comportamiento
  welcomeMessage String @default("¡Hola! Soy tu asistente virtual. ¿En qué puedo ayudarte?")
  offlineMessage String @default("Estamos fuera de línea. Déjanos tu mensaje y te contactaremos pronto.")
  businessHours Json? // Horarios de atención

  // Configuración avanzada
  showTypingIndicator Boolean @default(true)
  allowFileUpload    Boolean @default(true)
  maxFileSize        Int      @default(5242880) // 5MB en bytes
  autoOpenDelay      Int?     // Milisegundos para auto-abrir

  // Información del negocio
  businessName       String?
  businessDescription String?
  contactPhone       String?
  contactEmail       String?

  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([tenantId])
  @@index([isActive])
  @@map("widget_configs")
}

model WidgetConversation {
  id          String   @id @default(cuid())
  widgetApiKeyId String
  widgetApiKey WidgetApiKey @relation(fields: [widgetApiKeyId], references: [id], onDelete: Cascade)

  // Información del usuario
  userId      String?  // ID único del usuario en el sitio web
  userName    String?
  userEmail   String?
  userPhone   String?

  // Información de la sesión
  sessionId   String   @unique // ID único de la sesión del navegador
  userAgent   String?
  ipAddress   String?
  referrer    String?  // URL de donde viene el usuario

  // Estado de la conversación
  status      String   @default("active") // 'active' | 'closed' | 'escalated'
  isOnline    Boolean  @default(true)   // Si el operador está online

  // Estadísticas
  messageCount Int     @default(0)
  lastMessageAt DateTime?
  startedAt   DateTime @default(now())
  endedAt     DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relaciones
  messages    WidgetMessage[]

  @@index([widgetApiKeyId])
  @@index([sessionId])
  @@index([status])
  @@index([userId])
  @@map("widget_conversations")
}

model WidgetMessage {
  id          String   @id @default(cuid())
  conversationId String
  conversation WidgetConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  // Contenido del mensaje
  content     String
  messageType String   @default("text") // 'text' | 'file' | 'system'

  // Metadatos del archivo (si es tipo file)
  fileName    String?
  fileSize    Int?
  fileType    String?
  fileUrl     String?

  // Dirección del mensaje
  direction   String   // 'inbound' | 'outbound' | 'system'

  // Estado de entrega
  status      String   @default("sent") // 'sent' | 'delivered' | 'read' | 'failed'

  // Información adicional
  metadata    Json     @default("{}")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([conversationId])
  @@index([direction])
  @@index([createdAt])
  @@map("widget_messages")
}

