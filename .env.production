# Variables de Entorno para Producción
# Sistema de Gestión de Eventos V3

# ================================
# BASE DE DATOS
# ================================
DATABASE_URL=postgresql://plexo_prod_user:plexo_secure_pass_2025@postgres:5432/gestion_eventos_prod

# Variables individuales para Docker Compose
POSTGRES_DB=gestion_eventos_prod
POSTGRES_USER=plexo_prod_user
POSTGRES_PASSWORD=plexo_secure_pass_2025

# ================================
# AUTENTICACIÓN
# ================================
NEXTAUTH_SECRET=547ad8f6fd785f8f2a5379b4fd0ef0c9e713710ec593e2560b5043a86876396a
NEXTAUTH_URL=https://plexo.mx

# ================================
# EMAIL SMTP
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=soporteapps@hexalux.mx
SMTP_PASS=your-app-specific-password

# ================================
# REDIS CACHE
# ================================
REDIS_URL=redis://redis:6379

# ================================
# CONFIGURACIÓN DE APLICACIÓN
# ================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ================================
# CONFIGURACIÓN SSL
# ================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ================================
# LOGGING Y MONITORING
# ================================
LOG_LEVEL=info
ENABLE_PROMETHEUS_METRICS=false

# ================================
# RATE LIMITING
# ================================
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================
# PERFORMANCE
# ================================
ENABLE_REDIS_CACHE=true
CACHE_TTL=3600
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_IDLE_TIME=30000

# ================================
# SECURITY
# ================================
CORS_ORIGINS=https://plexo.mx,https://www.plexo.mx
SESSION_MAX_AGE=86400
JWT_SECRET=plexo_jwt_secret_2025_secure_key_for_api_tokens_min_32_chars

# ================================
# NOTIFICATIONS (OPCIONAL)
# ================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK