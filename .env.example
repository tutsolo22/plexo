# ===================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===================================
DATABASE_URL="postgresql://gestion_user:gestion_password@localhost:5433/gestion_de_eventos_db"

# ===================================
# NEXTAUTH.JS CONFIGURACIÓN
# ===================================
NEXTAUTH_URL="http://localhost:3200"
NEXTAUTH_SECRET="tu-secreto-super-seguro-aqui-cambiar-en-produccion"

# ===================================
# CONFIGURACIÓN DE EMAIL
# ===================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu-email@gmail.com"
SMTP_PASSWORD="tu-password-de-aplicacion"
EMAIL_FROM="noreply@gestiondeeventos.com"

# ===================================
# OPENAI CONFIGURACIÓN
# ===================================
OPENAI_API_KEY="sk-tu-clave-api-aqui"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# ===================================
# CONFIGURACIÓN DE APLICACIÓN
# ===================================
NODE_ENV="development"
APP_URL="http://localhost:3200"
APP_NAME="Gestión de Eventos V3"

# ===================================
# CONFIGURACIÓN DE UPLOADS
# ===================================
UPLOAD_MAX_SIZE="5242880"  # 5MB en bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# ===================================
# CONFIGURACIÓN DE LOGS
# ===================================
LOG_LEVEL="info"
LOG_FILE_ENABLED="true"

# ===================================
# CONFIGURACIÓN DE CACHE
# ===================================
REDIS_URL="redis://localhost:6380"  # Opcional para cache

# ===================================
